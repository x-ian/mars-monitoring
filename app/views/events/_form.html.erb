<%= form_for @event, :html => { :class => "form-horizontal event" } do |f| %>

  <% if @event.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :value, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :value, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value) %>
  </div>
  <div class="form-group">
    <%= f.label :message_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :message_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:message_id) %>
  </div>
  <div class="form-group">
    <%= f.label :probe_status_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :probe_status_id, ProbeStatus.all.collect{|p| [p.name, p.id]}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:probe_status_id) %>
  </div>
  <div class="form-group">
    <%= f.label :value_type_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :value_type_id, ValueType.all.collect{|p| [p.name, p.id]}, :class => 'form-control' %>
    </div>
    <%=f.error_span(:value_type_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
