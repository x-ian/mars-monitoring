<%- model_class = InvalidMessage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:reason) %></th>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @invalid_messages.each do |invalid_message| %>
      <tr>
        <td><%= link_to invalid_message.created_at, invalid_message_path(invalid_message) %></td>
        <td><%= invalid_message.reason %></td>
        <td><%= invalid_message.content %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      invalid_message_path(invalid_message), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_invalid_message_path(invalid_message), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      invalid_message_path(invalid_message),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_invalid_message_path,
            :class => 'btn btn-primary' %>
