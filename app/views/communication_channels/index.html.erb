<%- model_class = CommunicationChannel -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @communication_channels.each do |communication_channel| %>
      <tr>
        <td><%= link_to communication_channel.id, communication_channel_path(communication_channel) %></td>
        <td><%= communication_channel.name %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      communication_channel_path(communication_channel), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_communication_channel_path(communication_channel), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      communication_channel_path(communication_channel),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_communication_channel_path,
            :class => 'btn btn-primary' %>
