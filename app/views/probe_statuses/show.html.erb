<%- model_class = ProbeStatus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @probe_status.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @probe_status.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assumed) %>:</strong></dt>
  <dd><%= @probe_status.assumed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:severity_order) %>:</strong></dt>
  <dd><%= @probe_status.severity_order %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              probe_statuses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_probe_status_path(@probe_status), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              probe_status_path(@probe_status),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
