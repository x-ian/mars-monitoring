<%= form_for @probe_status, :html => { :class => "form-horizontal probe_status" } do |f| %>

  <% if @probe_status.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@probe_status.errors.count, "error") %> prohibited this probe_status from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @probe_status.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :status, :class => 'form-control' %>
    </div>
    <%=f.error_span(:status) %>
  </div>
  <div class="form-group">
    <%= f.label :assumed, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :assumed, :class => 'form-control' %>
    </div>
    <%=f.error_span(:assumed) %>
  </div>
  <div class="form-group">
    <%= f.label :severity_order, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.number_field :severity_order, :class => 'form-control' %>
    </div>
    <%=f.error_span(:severity_order) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                probe_statuses_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
