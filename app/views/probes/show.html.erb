<%- model_class = Probe -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
  <dd><%= @probe.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @probe.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:customer_id) %>:</strong></dt>
  <dd><%= @probe.customer.name unless @probe.customer.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_id) %>:</strong></dt>
  <dd><%= @probe.location.name unless @probe.location.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location_coordinates) %>:</strong></dt>
  <dd><%= @probe.location_coordinates %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enabled) %>:</strong></dt>
  <dd><%= @probe.enabled %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probe_configuration_id) %>:</strong></dt>
  <dd><%= @probe.probe_configuration.name unless @probe.probe_configuration.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probe_type_id) %>:</strong></dt>
  <dd><%= @probe.probe_type.name unless @probe.probe_type.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cell_number) %>:</strong></dt>
  <dd><%= @probe.cell_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:forward_subscription_id) %>:</strong></dt>
  <dd><%= @probe.forward_subscription.name unless @probe.forward_subscription.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:responsible_user_id) %>:</strong></dt>
  <dd><%= @probe.responsible_user.name unless @probe.responsible_user.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @probe.created_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              probes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_probe_path(@probe), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              probe_path(@probe),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
