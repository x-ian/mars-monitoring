<%= form_for(@probe) do |f| %>
  <% if @probe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@probe.errors.count, "error") %> prohibited this probe from being saved:</h2>

      <ul>
      <% @probe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :id %><br />
    <%= @probe.id %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :customer_id %><br />
	<%= f.select :customer_id, Customer.accessible_by(current_ability).collect{|p| [p.name, p.id]} %>
  </div>
  <div class="field">
    <%= f.label :location_id %><br />
	<%= f.select :location_id, Location.accessible_by(current_ability).collect{|p| [p.name, p.id]} %>
  </div>
  <div class="field">
    <%= f.label :probe_type_id %><br />
	<%= f.select :probe_type_id, ProbeType.all.collect{|p| [p.name, p.id]} %>
  </div>
  <div class="field">
    <%= f.label :probe_configuration_id %><br />
	<%= f.select :probe_configuration_id, ProbeConfiguration.all.collect{|p| [p.name, p.id]} %>
  </div>
  <div class="field">
    <%= f.label :forward_subscription_id %><br />
	<%= f.select :forward_subscription_id, Subscription.all.collect{|p| [p.name, p.id]}, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :location_coordinates %><br />
    <%= f.text_field :location_coordinates %>
  </div>
  <div class="field">
    <%= f.label :responsible_user_id %><br />
	<%= f.select :responsible_user_id, User.all.collect{|p| [p.name, p.id] if p.customer_id == @probe.customer_id}.compact, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :enabled %><br />
    <%= f.check_box :enabled %>
  </div>
  <div class="field">
    <%= f.label :cell_number %><br />
    <%= f.text_field :cell_number %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
