<%- model_class = Notification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
  <dd><%= @notification.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notification_reason_id) %>:</strong></dt>
  <dd><%= @notification.notification_reason.name unless @notification.notification_reason.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probe_id) %>:</strong></dt>
  <dd><%= link_to "#{@notification.probe.name} (#{@notification.probe.location.name})", @notification.probe unless @notification.probe.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message_id) %>:</strong></dt>
  <dd><%= link_to "#{@notification.message.id}", @notification.message unless @notification.message.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invalid_message_id) %>:</strong></dt>
  <dd><%= link_to "#{@notification.invalid_message.id}", @notification.invalid_message unless @notification.invalid_message.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:event_id) %>:</strong></dt>
  <dd><%= link_to "#{@notification.event.id}", @notification.event unless @notification.event.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notification_channel_id) %>:</strong></dt>
  <dd><%= @notification.notification_channel.name unless @notification.notification_channel	.nil? %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scheduled_at) %>:</strong></dt>
  <dd><%= @notification.scheduled_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:processed) %>:</strong></dt>
  <dd><%= @notification.processed %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sent_at) %>:</strong></dt>
  <dd><%= @notification.sent_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:error) %>:</strong></dt>
  <dd><%= @notification.error %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @notification.created_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:updated_at) %>:</strong></dt>
  <dd><%= @notification.updated_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              notifications_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_notification_path(@notification), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              notification_path(@notification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
