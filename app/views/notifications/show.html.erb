<%- model_class = Notification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
  <dd><%= @notification.id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reason_id) %>:</strong></dt>
  <dd><%= @notification.reason_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:probe_id) %>:</strong></dt>
  <dd><%= @notification.probe_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notification_channel_id) %>:</strong></dt>
  <dd><%= @notification.notification_channel_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:to) %>:</strong></dt>
  <dd><%= @notification.to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject) %>:</strong></dt>
  <dd><%= @notification.subject %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @notification.body %></dd>
  <dt><strong><%= model_class.human_attribute_name(:scheduled_at) %>:</strong></dt>
  <dd><%= @notification.scheduled_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sent_at) %>:</strong></dt>
  <dd><%= @notification.sent_at %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              notifications_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_notification_path(@notification), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              notification_path(@notification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
